<!--Widok logowania jako admin-->
<!--Klasa modelu-->
@model PizzaRestaurant.WebUI.Models.LoginViewModel


@{
    ViewBag.Title = "Administracja: logowanie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--Panel w bootstrapie to obramowane pudełko z dopełnieniem wokół jego zawartości-->
<div class="panel">
    <!--Klasa dodaje nagłówek do panelu-->
    <div class="panel-heading">
        <h3>Zaloguj się</h3>
    </div>
    <div class="panel-body">
        <!--"Lead" - wyróżnienie akapitu-->
        <p class="lead">Proszę się zalogować, aby uzyskać dostęp do obszaru administracyjnego:</p>
        <!--Formularz-->
        @using (Html.BeginForm())
        {
            <!--"Html.ValidationSummary()" - wyświetlanie błędów w podsumowaniu-->
            @Html.ValidationSummary()
        <div class="form-group">
            <label>Nazwa użytkownika:</label>
            <!--"Html.TextBoxFor" sprawdza błędy w czasie kompilacji.-->
            <!--Elementy z klasy "form-control" mają szerokość 100%.-->
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
            <div class="form-group">
                <label>Hasło:</label>
                <!--"Html.PasswordFor" - generuje pole wprowadzania hasła-->
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <input type="submit" value="Zaloguj się" class="btn btn-primary" />
        }
    </div>
</div>


