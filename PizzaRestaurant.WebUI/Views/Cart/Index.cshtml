<!--Widok listy zakupów-->
@model PizzaRestaurant.WebUI.Models.CartIndexViewModel

@{
    ViewBag.Title = "Pizza Restaurant";
}

<!--Element <style> oraz atrybut "id" w elemencie <table> gwarantują prawidłowe umieszczenie przycisku i zawartości pozostałych kolumn.-->
<style>
    #cartTable td {
        vertical-align: middle;
    }
</style>

<!--Nagłówek -->
<h2>Your cart</h2>
<table id="cartTable" class="table">

    <!--tabela-->
    <table class="table">
        <!--Obszar nagłówkowy tabeli-->
        <thead>
            <!--Wiersz w tabeli-->
            <tr>
                <!--(TH) Komórka nagłówkowa w tabeli (TABLE). Zawiera się wewnątrz wierszy (TR).-->
                <th>Amount</th>
                <th>Product</th>
                <th class="text-right">Price</th>
                <th class="text-right">Value</th>
            </tr>
        </thead>

        <!--Ciało (treść) dokumentu.-->
        <tbody>
            @foreach (var line in Model.Cart.Lines)
            {
                <tr>
                    <!--(TD) kolumny-->
                    <td class="text-center">@line.Quantity</td>
                    <td class="text-left">@line.Product.Name</td>
                    <td class="text-right">@line.Product.Price.ToString("c")</td>
                    <td class="text-right">@((line.Quantity * line.Product.Price).ToString("c"))</td>

                    <!--Pola niewidoczne + przycisk "Usuń".-->
                    <td>
                        @using (Html.BeginForm("RemoveFromCart", "Cart"))
                        {
                            @Html.Hidden("ProductID", line.Product.ProductID)
                            @Html.HiddenFor(x => x.ReturnUrl)
                            <input class="btn btn btn-sm btn-warning" type="submit" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </tbody>

        <!--Stopka tabeli (TABLE). Zawiera wiersze (TR).-->
        <tfoot>
            <tr>
                <!--Komórka danych w tabeli (TABLE). Zawiera się wewnątrz wierszy (TR).-->
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.Cart.ComputeTotalValue().ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <!--(DIV)Blok-->
    <div class="text-center">
        <!--(HREF) zasób internetowy, tu pod adresem "Model.ReturnUrl"-->
        <a class="btn btn-primary" href="@Model.ReturnUrl">
            Continue shopping
        </a>
        <!--Typy anonimowe "new{...}" pozwalają nam tworzyć obiekty klas, których deklaracja nie istnieje-->
        @Html.ActionLink("Submit your order", "CheckOut", null, new { @class = "btn btn-primary" })
    </div>
